rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Menu items photos - authenticated users can read, authenticated users can write
    match /menu-items/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
        && request.resource.size < 5 * 1024 * 1024  
        && request.resource.contentType.matches('image/.*'); 
      allow delete: if isAuthenticated();
    }

    // Inventory items photos
    match /inventory-images/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
        && request.resource.size < 5 * 1024 * 1024  // Max 5MB
        && request.resource.contentType.matches('image/.*');  // Only images
      allow delete: if isAuthenticated();
    }
    
    // Receipts
    match /receipts/{userId}/{fileName} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || request.auth.token.role == 'admin'); 
      // Allow users to upload their own receipts
      allow write: if isAuthenticated() 
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

