rules_version = '2';


service cloud.firestore {


  match /databases/{database}/documents {


    /* ======================

       HELPER FUNCTIONS

       ====================== */


    function loggedIn() {

      return request.auth != null;

    }


    function role() {
      // 1. Check Custom Claim (Fastest, Cheapest)
      return loggedIn() && 'role' in request.auth.token 
        ? request.auth.token.role 
        // 2. Fallback: Check User Document in Firestore (Costs 1 Read)
        : (loggedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
            ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role
            : 'client');
    }


    function isAdmin() {

      return role() == 'admin';

    }


    function isCanteen() {

      return role() == 'canteen';

    }


    function isStaff() {

      return isAdmin() || isCanteen();

    }


    function hasActiveAccess() {
      return isStaff()
        || (
          loggedIn()
          && 'nextPaymentDue' in request.auth.token
          // Compare Unix Timestamp (seconds) from Claim with Request Time
          && request.auth.token.nextPaymentDue > (request.time.toMillis() / 1000)
        );
    }


    function isOwner(userId) {
      return loggedIn() && request.auth.uid == userId;
    }

    function isModifyingSensitiveFields() {
      // Prevent user from modifying balance, role, verified status, etc directly
      return request.resource.data.diff(resource.data).affectedKeys()
        .hasAny(['balance', 'role', 'verified', 'nextPaymentDue', 'enrollmentCompleted', 'currentSeat']);
    }


    function isSettingSensitiveFields() {
      return request.resource.data.keys().hasAny(['balance', 'role', 'verified', 'nextPaymentDue', 'enrollmentCompleted', 'currentSeat']);
    }

    /* ======================

       USERS

       ====================== */


    // --- USERS COLLECTION ---
    match /users/{userId} {
      allow read: if isOwner(userId) || isStaff();
      
      // Allow creating own profile (e.g. on signup), but ensure sensitive fields aren't preset maliciously
      // Though ideally onUserCreated handles this.
      allow create: if isOwner(userId) && !isSettingSensitiveFields();

      // Allow updating: Own profile, BUT prevent modifying sensitive fields
      allow update: if isOwner(userId) && !isModifyingSensitiveFields();

      // Staff can update everything
      allow update, delete: if isStaff();
    }


    match /users/{uid}/private_data/{docId} {

      allow read: if loggedIn() && (uid == request.auth.uid || isStaff());

      allow write: if loggedIn() && uid == request.auth.uid;

    }


    /* ======================

       DISCUSSION ROOMS

       ====================== */


    match /discussion_rooms/{slotDocId} {

      allow read: if loggedIn();


      allow create: if loggedIn()

        && request.resource.data.bookedBy == request.auth.uid

        && hasActiveAccess();


      allow update: if loggedIn()

        && hasActiveAccess()

        && request.resource.data.bookedBy == resource.data.bookedBy;


      allow delete: if loggedIn()

        && (resource.data.bookedBy == request.auth.uid || isAdmin());

    }


    /* ======================

       ORDERS

       ====================== */


    // --- ORDERS COLLECTION ---
    match /orders/{orderId} {
      // Allow reading own orders
      allow list: if loggedIn() && (isStaff() || resource.data.userId == request.auth.uid);
      allow get: if loggedIn() && (isStaff() || resource.data.userId == request.auth.uid);

      // CREATE: BLOCKED for clients. Must use processCanteenOrder Cloud Function.
      allow create: if false; 

      // UPDATE: Staff can update status. Users can ONLY request cancellation.
      allow update: if loggedIn() && (
        isStaff() // Staff can change status to 'completed' or 'delivered'
        || (
          request.auth.uid == resource.data.userId 
          // Clients can ONLY update the 'cancellationRequested' field
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['cancellationRequested'])
          // Ensure they don't try to change the price or status while requesting cancellation
          && request.resource.data.status == resource.data.status
          && request.resource.data.total == resource.data.total
        )
      );
    }


    /* ======================

       PAYMENTS

       ====================== */


    match /payments/{payId} {

      allow read: if loggedIn()

        && (isStaff() || resource.data.userId == request.auth.uid);


      // CREATE: BLOCKED for clients. Integrity check.
      allow create: if false; 


      allow update, delete: if isAdmin();

    }


    /* ======================

       STANDARD COLLECTIONS

       ====================== */


    match /announcements/{id} {

      allow read: if loggedIn();

      allow write: if isStaff();

    }


    match /menuItems/{id} {

      allow read: if loggedIn();

      allow write: if isStaff();

    }


    match /todaysMenu/{id} {

      allow read: if loggedIn();

      allow write: if isStaff();

    }


    match /readingRooms/{id} {

      allow read: if loggedIn();

      allow write: if isAdmin();

    }


    match /seatAssignments/{id} {

      allow read: if loggedIn();

      allow create: if loggedIn()

        && (isAdmin() || request.resource.data.userId == request.auth.uid);

      allow update, delete: if isAdmin();

    }


    match /messages/{id} {

      allow read: if isStaff();

      allow create: if loggedIn()

        && request.resource.data.userId == request.auth.uid;

    }


    match /readingRoomEnrollments/{id} {

      // Allow staff to read all enrollments
      allow read: if isStaff();
      
      // Allow users to read their own enrollments
      allow read: if loggedIn() && resource.data.userId == request.auth.uid;

      allow create: if loggedIn()

        && request.resource.data.userId == request.auth.uid;

      allow update, delete: if isAdmin();

    }


    match /dailySales/{date} {
      allow read, write: if isStaff();
    }

    match /transactions/{id} {
      // Allow users to see their own transactions, staff to see all
      allow read: if loggedIn() && (isStaff() || resource.data.userId == request.auth.uid);
      
      // CREATE: BLOCKED for clients. Integrity check.
      // CREATE: BLOCKED for clients. Integrity check.
      allow create: if false;
      
      // Allow users to update their own transactions ONLY for invoice metadata fields
      allow update: if loggedIn() && (
        isAdmin()
        || (
          resource.data.userId == request.auth.uid
          // Only allow updating invoice-related fields
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['invoiceSent', 'invoiceId', 'invoiceSentAt'])
        )
      );
        
      allow delete: if isAdmin();
    }

    match /balanceRequests/{requestId} {
      allow read: if loggedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
      
      // CREATE: Allow users to create requests, BUT enforce status must be 'pending'
      // and they cannot spoof the userId or approved fields
      allow create: if loggedIn() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == 'pending'
        && !('approvedBy' in request.resource.data)
        && !('approvedAt' in request.resource.data);
        
      // Only admin can update status
      allow update: if isAdmin(); 
      allow delete: if isAdmin();
    }

    match /refunds/{refundId} {
      // Allow users to read their own refunds, staff to read all
      allow read: if loggedIn() && (isStaff() || resource.data.userId == request.auth.uid);
      
      // CREATE: Allow users to create refund requests
      allow create: if loggedIn() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == 'pending';
        
      // Only admin can update status (approve/reject)
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    match /invoices/{id} {
      // Allow users to read their own invoices, staff to read all
      allow read: if loggedIn() && (isStaff() || resource.data.userId == request.auth.uid);
      
      // CREATE: BLOCKED for clients. Must use Cloud Function for integrity.
      allow create: if false;
      
      allow update, delete: if isAdmin();
    }


    /* ======================

       INVENTORY & CANTEEN

       ====================== */


    match /raw_materials/{id} {

      allow read, write: if isStaff();

    }


    match /canteen_items/{id} {
      allow read: if loggedIn();
      // Server-side only for updates to prevent stock manipulation
      allow update, create, delete: if isStaff();
    }


    match /canteen_menu/{id} {

      allow read: if loggedIn(); // Allow all users to see the menu
      
      allow write: if isStaff();

    }


    /* ======================

       HOSTEL MANAGEMENT

       ====================== */


    match /hostelRooms/{roomId} {
      // Allow all logged-in users to read hostel rooms (to browse availability)
      allow read: if loggedIn();
      
      // Only admin can create, update, or delete rooms
      allow write: if isAdmin();
    }

    match /hostelAssignments/{assignmentId} {
      // Allow all logged-in users to read assignments (needed to check bed availability)
      allow read: if loggedIn();
      
      // Only admin can create, update, or delete assignments
      // (Typically created via Cloud Function during purchase)
      allow write: if isAdmin();
    }


    /* ======================

       APP CONFIGURATION

       ====================== */

    match /settings/{docId} {
      // Allow everyone to read config (needed for public pricing on landing pages)
      allow read: if true;
      
      // Only admin can update settings
      allow write: if isAdmin();
    }

    match /coupons/{couponId} {
      allow read: if loggedIn();
      allow write: if isAdmin();
    }


    /* ======================

       LOAN SYSTEM

       ====================== */
    
    match /system_config/loan_settings {
      allow read: if loggedIn();
      allow write: if isAdmin();
    }

    /* ======================

       DEFAULT DENY

       ====================== */


    match /{path=**} {

      allow read, write: if isAdmin();

    }

  }

}
